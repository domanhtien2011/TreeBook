<!DOCTYPE html>
<html>
  <head>
    <title>TreeBook</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
     <%= link_to "Tree Book", root_path, class: 'nav navbar-brand' %>
      <ul class="nav navbar-nav">
        <li class="nav-item">
          <%= link_to "All Statuses", feed_path, class: "nav-link" %>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to edit_user_registration_path, class: "nav-link" do %>
              <i class="fa fa-user" aria-hidden='true'></i>
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to logout_path, class: "nav-link" do %>
              <i class="fa fa-sign-out"></i>
            <% end %>
          </li>

          <li class="nav-item pull-sm-right">
            <%= link_to current_user.profile_name%>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to register_path, class: "nav-link" do %>
              <i class="fa fa-user-plus"></i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to login_path, class: "nav-link" do %>
              <i class="fa fa-sign-in" aria-hidden="true"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
